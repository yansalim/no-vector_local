# =============================================================================
# VECTORLESS - CONFIGURAÇÃO DE AMBIENTE
# =============================================================================

# =============================================================================
# OPENAI CONFIGURAÇÃO
# =============================================================================
# Sua chave da API da OpenAI (obrigatório)
# Obtenha em: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# CONFIGURAÇÕES DE PORTA
# =============================================================================
# Porta do frontend Next.js
FRONTEND_PORT=3000

# Porta do backend FastAPI
BACKEND_PORT=8000

# Porta do Nginx (apenas para produção)
NGINX_PORT=80

# =============================================================================
# URLs DOS SERVIÇOS
# =============================================================================
# URL do backend para o frontend se conectar
BACKEND_URL=http://localhost:8000

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =============================================================================
# Ambiente de execução
NODE_ENV=development

# =============================================================================
# CONFIGURAÇÕES ADICIONAIS
# =============================================================================
# Tamanho máximo de upload de arquivo (em bytes)
MAX_FILE_SIZE=10485760

# Número máximo de arquivos por upload
MAX_FILES_PER_UPLOAD=100

# =============================================================================
# CONFIGURAÇÕES DE LOG
# =============================================================================
# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# CONFIGURAÇÕES DE CORS
# =============================================================================
# Origens permitidas para CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
